{
  "_metadata": {
    "domain": "Attachment",
    "description": "첨부파일 관련 API",
    "endpoint_count": 4,
    "base_url": "http://learning-ci.local.com"
  },
  "paths": {
    "/rest/attachment/upload": {
      "post": {
        "tags": [
          "Attachment"
        ],
        "summary": "첨부파일 업로드",
        "description": "게시글에 파일을 첨부합니다 (로그인 필요, 최대 5개)",
        "security": [
          {
            "sessionAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "file",
                  "article_id"
                ],
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "업로드할 파일 (이미지: 5MB, 일반파일: 10MB 제한)"
                  },
                  "article_id": {
                    "type": "integer",
                    "description": "게시글 ID"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "파일 업로드 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "attachment_id": {
                      "type": "integer"
                    }
                  }
                },
                "example": {
                  "message": "파일이 업로드되었습니다.",
                  "attachment_id": 1
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "noFile": {
                    "value": {
                      "message": "파일이 선택되지 않았습니다."
                    }
                  },
                  "invalidFileType": {
                    "value": {
                      "message": "허용되지 않는 파일 형식입니다."
                    }
                  },
                  "fileTooLarge": {
                    "value": {
                      "message": "파일 크기가 제한을 초과했습니다."
                    }
                  },
                  "maxFilesExceeded": {
                    "value": {
                      "message": "게시글당 최대 5개의 파일만 첨부할 수 있습니다."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "로그인이 필요합니다."
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "파일 업로드 중 오류가 발생했습니다."
                }
              }
            }
          }
        }
      }
    },
    "/rest/attachment/list/{article_id}": {
      "get": {
        "tags": [
          "Attachment"
        ],
        "summary": "첨부파일 목록 조회",
        "description": "특정 게시글의 첨부파일 목록을 조회합니다",
        "parameters": [
          {
            "name": "article_id",
            "in": "path",
            "required": true,
            "description": "게시글 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "첨부파일 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Attachment"
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "original_name": "image.png",
                    "file_size": 1024000,
                    "mime_type": "image/png",
                    "is_image": true,
                    "thumbnail_url": "http://localhost/uploads/thumbnails/abc123.png",
                    "image_url": "http://localhost/uploads/attachments/abc123.png",
                    "download_count": 5,
                    "created_at": "2025-12-08 10:00:00"
                  }
                ]
              }
            }
          },
          "404": {
            "description": "게시글을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "게시글을 찾을 수 없습니다."
                }
              }
            }
          }
        }
      }
    },
    "/rest/attachment/download/{id}": {
      "get": {
        "tags": [
          "Attachment"
        ],
        "summary": "첨부파일 다운로드",
        "description": "첨부파일을 다운로드하고 다운로드 횟수를 증가시킵니다",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "첨부파일 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "파일 다운로드 성공",
            "content": {
              "application/octet-stream": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "404": {
            "description": "첨부파일을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "첨부파일을 찾을 수 없습니다."
                }
              }
            }
          }
        }
      }
    },
    "/rest/attachment/{id}": {
      "delete": {
        "tags": [
          "Attachment"
        ],
        "summary": "첨부파일 삭제",
        "description": "첨부파일을 삭제합니다 (로그인 필요, 게시글 작성자만 가능)",
        "security": [
          {
            "sessionAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "첨부파일 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "첨부파일 삭제 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "첨부파일이 삭제되었습니다."
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "로그인이 필요합니다."
                }
              }
            }
          },
          "403": {
            "description": "권한 없음",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "권한이 없습니다."
                }
              }
            }
          },
          "404": {
            "description": "첨부파일을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "첨부파일을 찾을 수 없습니다."
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Attachment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "첨부파일 ID"
          },
          "original_name": {
            "type": "string",
            "description": "원본 파일명"
          },
          "file_size": {
            "type": "integer",
            "description": "파일 크기 (bytes)"
          },
          "mime_type": {
            "type": "string",
            "description": "MIME 타입"
          },
          "is_image": {
            "type": "boolean",
            "description": "이미지 여부"
          },
          "thumbnail_url": {
            "type": "string",
            "description": "썸네일 URL (이미지인 경우, 없으면 원본 이미지 URL)"
          },
          "image_url": {
            "type": "string",
            "description": "원본 이미지 URL (이미지인 경우에만)"
          },
          "download_count": {
            "type": "integer",
            "description": "다운로드 횟수"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "업로드 일시"
          }
        }
      }
    }
  }
}