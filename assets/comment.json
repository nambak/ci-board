  "components": {
    "schemas": {
      "Comment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "댓글 ID"
          },
          "name": {
            "type": "string",
            "description": "작성자 이름"
          },
          "comment": {
            "type": "string",
            "description": "댓글 내용"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "작성 일시"
          },
          "can_edit": {
            "type": "boolean",
            "description": "수정 권한 여부"
          },
          "parent_id": {
            "type": "integer",
            "nullable": true,
            "description": "부모 댓글 ID (답글인 경우)"
          },
          "depth": {
            "type": "integer",
            "description": "댓글 깊이 (0: 일반 댓글, 1-2: 답글)"
          },
          "parent_author_name": {
            "type": "string",
            "nullable": true,
            "description": "부모 댓글 작성자 이름 (답글인 경우)"
          }
        }
      }
    }
  }
}