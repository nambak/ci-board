{
  "_metadata": {
    "domain": "Comment",
    "description": "댓글 관련 API",
    "endpoint_count": 4,
    "base_url": "http://learning-ci.local.com"
  },
  "paths": {
    "/rest/comment": {
      "get": {
        "tags": [
          "Comment"
        ],
        "summary": "댓글 목록 조회",
        "description": "특정 게시글의 댓글 목록을 계층 구조로 조회합니다. 부모 댓글 아래에 자식 댓글(답글)이 정렬되어 반환됩니다.",
        "parameters": [
          {
            "name": "article_id",
            "in": "query",
            "required": true,
            "description": "게시글 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "댓글 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Comment"
                      }
                    }
                  }
                },
                "example": {
                  "data": [
                    {
                      "id": 1,
                      "name": "홍길동",
                      "comment": "좋은 글이네요!",
                      "created_at": "2024-08-20 11:00:00",
                      "can_edit": true,
                      "parent_id": null,
                      "depth": 0,
                      "parent_author_name": null
                    },
                    {
                      "id": 2,
                      "name": "김철수",
                      "comment": "저도 동의합니다!",
                      "created_at": "2024-08-20 11:30:00",
                      "can_edit": false,
                      "parent_id": 1,
                      "depth": 1,
                      "parent_author_name": "홍길동"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/rest/comment/save": {
      "post": {
        "tags": [
          "Comment"
        ],
        "summary": "댓글 작성",
        "description": "게시글에 새로운 댓글 또는 답글을 작성합니다 (로그인 필요). parent_id를 지정하면 해당 댓글에 대한 답글로 저장됩니다.",
        "security": [
          {
            "sessionAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "required": [
                  "article_id",
                  "comment"
                ],
                "properties": {
                  "article_id": {
                    "type": "integer",
                    "description": "게시글 ID"
                  },
                  "comment": {
                    "type": "string",
                    "description": "댓글 내용"
                  },
                  "parent_id": {
                    "type": "integer",
                    "nullable": true,
                    "description": "부모 댓글 ID (답글인 경우). 최대 depth 2까지 허용됩니다."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "댓글 작성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "id": {
                      "type": "integer",
                      "description": "생성된 댓글 ID"
                    }
                  }
                },
                "example": {
                  "message": "success",
                  "id": 15
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "invalidArticleId": {
                    "value": {
                      "message": "invalid article_id"
                    }
                  },
                  "commentRequired": {
                    "value": {
                      "message": "comment required"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "unauthorized"
                }
              }
            }
          },
          "403": {
            "description": "이메일 인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "email_verification_required": {
                      "type": "boolean",
                      "description": "이메일 인증 필요 여부"
                    }
                  }
                },
                "example": {
                  "message": "이메일 인증이 필요합니다. 이메일을 확인하여 인증을 완료해주세요.",
                  "email_verification_required": true
                }
              }
            }
          },
          "404": {
            "description": "게시글을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "article not found"
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "server error"
                }
              }
            }
          }
        }
      }
    },
