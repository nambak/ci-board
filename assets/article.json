              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "invalidBoardId": {
                    "value": {
                      "message": "invalid board_id"
                    }
                  },
                  "titleRequired": {
                    "value": {
                      "message": "title required"
                    }
                  },
                  "contentRequired": {
                    "value": {
                      "message": "content required"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
