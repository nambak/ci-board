        "tags": [
          "Article"
        ],
        "summary": "게시글 조회",
        "description": "특정 게시글의 상세 정보를 조회합니다 (작성자 정보 포함)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "게시글 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "게시글 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleDetail"
                },
                "example": {
                  "id": 1,
                  "board_id": 1,
                  "user_id": 1,
                  "title": "첫 번째 게시글",
                  "content": "게시글 내용입니다.",
                  "view_count": 10,
                  "name": "홍길동",
                  "email": "user@example.com",
                  "created_at": "2024-08-20 10:00:00",
                  "updated_at": "2024-08-20 10:00:00"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "invalid id"
                }
              }
            }
          },
          "404": {
            "description": "게시글을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "not found"
                }
              }
            }
          },
          "500": {
