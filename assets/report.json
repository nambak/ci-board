{
  "_metadata": {
    "domain": "Report",
    "description": "신고 관련 API",
    "endpoint_count": 5,
    "base_url": "http://learning-ci.local.com"
  },
  "paths": {
    "/rest/report": {
      "post": {
        "tags": ["Report"],
        "summary": "신고 제출",
        "description": "게시글 또는 댓글을 신고합니다 (로그인 필요, 중복 신고 불가)",
        "security": [{"sessionAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "required": ["target_type", "target_id", "reason"],
                "properties": {
                  "target_type": {
                    "type": "string",
                    "enum": ["article", "comment"],
                    "description": "신고 대상 유형"
                  },
                  "target_id": {
                    "type": "integer",
                    "description": "신고 대상 ID"
                  },
                  "reason": {
                    "type": "string",
                    "enum": ["spam", "abuse", "adult", "copyright", "other"],
                    "description": "신고 사유 (spam: 스팸/광고, abuse: 욕설/비방, adult: 음란물, copyright: 저작권 침해, other: 기타)"
                  },
                  "detail": {
                    "type": "string",
                    "description": "상세 내용 (기타 사유 선택 시 필수)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "신고 접수 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "id": {"type": "integer", "description": "생성된 신고 ID"}
                  }
                },
                "example": {
                  "message": "신고가 접수되었습니다.",
                  "id": 1
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {"message": {"type": "string"}}
                },
                "examples": {
                  "invalidTargetType": {"value": {"message": "invalid target_type"}},
                  "invalidTargetId": {"value": {"message": "invalid target_id"}},
                  "invalidReason": {"value": {"message": "invalid reason"}},
                  "detailRequired": {"value": {"message": "기타 사유를 선택한 경우 상세 내용을 입력해주세요."}}
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "example": {"message": "unauthorized"}
              }
            }
          },
          "404": {
            "description": "대상을 찾을 수 없음",
            "content": {
              "application/json": {
                "examples": {
                  "articleNotFound": {"value": {"message": "존재하지 않는 게시글입니다."}},
                  "commentNotFound": {"value": {"message": "존재하지 않는 댓글입니다."}}
                }
              }
            }
          },
          "409": {
            "description": "중복 신고",
            "content": {
              "application/json": {
                "example": {"message": "이미 신고한 게시물입니다."}
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "example": {"message": "server error"}
              }
            }
          }
        }
      }
    },
    "/rest/report/reasons": {
      "get": {
        "tags": ["Report"],
        "summary": "신고 사유 목록 조회",
        "description": "사용 가능한 신고 사유 목록을 조회합니다",
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "reasons": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "value": {"type": "string"},
                          "label": {"type": "string"}
                        }
                      }
                    }
                  }
                },
                "example": {
                  "reasons": [
                    {"value": "spam", "label": "스팸/광고"},
                    {"value": "abuse", "label": "욕설/비방"},
                    {"value": "adult", "label": "음란물"},
                    {"value": "copyright", "label": "저작권 침해"},
                    {"value": "other", "label": "기타"}
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/rest/admin/reports": {
      "get": {
        "tags": ["Admin - Report"],
        "summary": "신고 목록 조회 (관리자)",
        "description": "신고 목록을 조회합니다 (관리자 권한 필요)",
        "security": [{"sessionAuth": []}],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "페이지 번호",
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "페이지당 항목 수",
            "schema": {"type": "integer", "default": 10}
          },
          {
            "name": "status",
            "in": "query",
            "description": "상태 필터",
            "schema": {
              "type": "string",
              "enum": ["pending", "processing", "completed", "rejected"]
            }
          },
          {
            "name": "target_type",
            "in": "query",
            "description": "유형 필터",
            "schema": {
              "type": "string",
              "enum": ["article", "comment"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "rows": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Report"}
                    },
                    "pagination": {"$ref": "#/components/schemas/Pagination"},
                    "status_counts": {
                      "type": "object",
                      "properties": {
                        "pending": {"type": "integer"},
                        "processing": {"type": "integer"},
                        "completed": {"type": "integer"},
                        "rejected": {"type": "integer"}
                      }
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "권한 없음",
            "content": {
              "application/json": {
                "example": {"message": "forbidden"}
              }
            }
          }
        }
      }
    },
    "/rest/admin/reports/{id}": {
      "get": {
        "tags": ["Admin - Report"],
        "summary": "신고 상세 조회 (관리자)",
        "description": "특정 신고의 상세 정보를 조회합니다 (관리자 권한 필요)",
        "security": [{"sessionAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "신고 ID",
            "schema": {"type": "integer"}
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ReportDetail"}
              }
            }
          },
          "403": {
            "description": "권한 없음",
            "content": {
              "application/json": {
                "example": {"message": "forbidden"}
              }
            }
          },
          "404": {
            "description": "신고를 찾을 수 없음",
            "content": {
              "application/json": {
                "example": {"message": "report not found"}
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Admin - Report"],
        "summary": "신고 상태 변경 (관리자)",
        "description": "신고의 처리 상태를 변경합니다 (관리자 권한 필요)",
        "security": [{"sessionAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "신고 ID",
            "schema": {"type": "integer"}
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "required": ["status"],
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": ["pending", "processing", "completed", "rejected"],
                    "description": "변경할 상태"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "상태 변경 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "status": {"type": "string"}
                  }
                },
                "example": {
                  "message": "신고 상태가 변경되었습니다.",
                  "status": "completed"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "examples": {
                  "invalidId": {"value": {"message": "invalid id"}},
                  "invalidStatus": {"value": {"message": "invalid status"}}
                }
              }
            }
          },
          "403": {
            "description": "권한 없음",
            "content": {
              "application/json": {
                "example": {"message": "forbidden"}
              }
            }
          },
          "404": {
            "description": "신고를 찾을 수 없음",
            "content": {
              "application/json": {
                "example": {"message": "report not found"}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Report": {
        "type": "object",
        "properties": {
          "id": {"type": "integer", "description": "신고 ID"},
          "reporter_id": {"type": "integer", "description": "신고자 ID"},
          "reporter_name": {"type": "string", "description": "신고자 이름"},
          "target_type": {"type": "string", "enum": ["article", "comment"], "description": "신고 대상 유형"},
          "target_id": {"type": "integer", "description": "신고 대상 ID"},
          "reason": {"type": "string", "description": "신고 사유 코드"},
          "reason_label": {"type": "string", "description": "신고 사유 라벨"},
          "detail": {"type": "string", "nullable": true, "description": "상세 내용"},
          "status": {"type": "string", "enum": ["pending", "processing", "completed", "rejected"], "description": "처리 상태"},
          "created_at": {"type": "string", "format": "date-time", "description": "신고 일시"},
          "processed_at": {"type": "string", "format": "date-time", "nullable": true, "description": "처리 일시"},
          "processed_by": {"type": "integer", "nullable": true, "description": "처리자 ID"},
          "processor_name": {"type": "string", "nullable": true, "description": "처리자 이름"},
          "target_info": {"$ref": "#/components/schemas/TargetInfo"}
        }
      },
      "ReportDetail": {
        "allOf": [
          {"$ref": "#/components/schemas/Report"},
          {
            "type": "object",
            "properties": {
              "reporter_email": {"type": "string", "description": "신고자 이메일"}
            }
          }
        ]
      },
      "TargetInfo": {
        "type": "object",
        "nullable": true,
        "properties": {
          "type": {"type": "string", "description": "대상 유형"},
          "id": {"type": "integer", "description": "대상 ID"},
          "title": {"type": "string", "description": "게시글 제목 (게시글인 경우)"},
          "content": {"type": "string", "description": "내용 미리보기"},
          "author_id": {"type": "integer", "description": "작성자 ID"},
          "created_at": {"type": "string", "format": "date-time", "description": "작성일"},
          "url": {"type": "string", "description": "대상 URL"}
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "total": {"type": "integer", "description": "전체 항목 수"},
          "per_page": {"type": "integer", "description": "페이지당 항목 수"},
          "current_page": {"type": "integer", "description": "현재 페이지"},
          "total_pages": {"type": "integer", "description": "전체 페이지 수"},
          "from": {"type": "integer", "description": "현재 페이지 시작 번호"},
          "to": {"type": "integer", "description": "현재 페이지 끝 번호"}
        }
      }
    }
  }
}
